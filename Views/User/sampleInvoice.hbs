<html lang="en">
<head>
  <meta charset='utf-8'>
  <meta http-equiv='X-UA-Compatible' content='IE=edge'>
  <title>Thank you for shopping with Chronix</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <style>
    body {
      font-family: 'Helvetica Neue', Arial, sans-serif;
      color: #333;
      background-color: #f4f7fc;
      padding: 40px;
      margin: 0;
    }

    .invoice {
      max-width: 800px;
      margin: auto;
      padding: 30px;
      background-color: #ffffff;
      border-radius: 8px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
      text-align: left;
    }

    .invoice-header {
      text-align: center;
      margin-bottom: 20px;
    }

    h1 {
      font-size: 36px;
      color: #3498db;
      margin-bottom: 10px;
    }

    .invoice-details {
      font-size: 16px;
      margin-bottom: 20px;
    }

    .invoice-details p {
      margin: 6px 0;
    }

    .invoice-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 30px;
      border-top: 1px solid #e0e0e0;
      padding-top: 15px;
    }

    .footer-left {
      font-size: 14px;
      color: #888;
    }

    .footer-right {
      font-size: 18px;
      font-weight: bold;
      color: #2ecc71;
    }

    .invoice-details strong {
      font-weight: 600;
    }

    .order-items {
      margin-top: 20px;
      border-top: 1px solid #e0e0e0;
      padding-top: 15px;
    }

    .order-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    .order-table th,
    .order-table td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #f4f4f4;
    }

    .order-table th {
      background-color: #f8f8f8;
      font-weight: bold;
    }

    .order-item img {
      width: 50px;
      height: 50px;
      object-fit: cover;
      margin-right: 10px;
    }

    .company-logo {
      height: 250px;
      object-fit: contain;
    }
  </style>
    <link rel="icon" type="image/png" href="/Images/Logo/favicon_without_bg.png">
</head>

<body>
  <div class="invoice">
    <div class="invoice-header">
      <img class="company-logo" src="/Public/Images/Logo/main_logo_with_black_without_bg.webp" alt="Logo" />
      <h1>Invoice</h1>
      <p>{{orderDate}}</p>
    </div>

    <div class="invoice-details">
      <p><strong>Order ID:</strong> {{orderId}}</p>
      <p><strong>Customer:</strong> {{customerName}}</p>
      <p><strong>Email:</strong> {{customerEmail}}</p>
      <p><strong>Shipping Address:</strong></p>
      <p>{{shippingAddress}}</p>
      <p><strong>Phone:</strong> {{customerPhone}}</p>
      <p><strong>Payment Method:</strong> {{paymentMethod}}</p>
      <p><strong>Payment Status:</strong> {{paymentStatus}}</p>
      <p><strong>Delivery Status:</strong> {{deliveryStatus}}</p>
      <p><strong>Coupon Code:</strong> {{couponCode}}</p>
    </div>

    <div class="order-items">
      <h3>Items:</h3>
      <table class="order-table">
        <thead>
          <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          {{#each items}}
          <tr class="order-item">
            <td><strong>{{productName}}</strong></td>
            <td>{{price}}</td>
            <td>{{quantity}}</td>
            <td>{{total}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="invoice-footer">
      <div class="footer-left">
        <p>Thank you for shopping with Chronix!</p>
      </div>
      <div class="footer-right">
        <p>Total: {{orderTotal}}</p>
      </div>
    </div>
  </div>
</body>

</html>